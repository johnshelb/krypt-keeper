<h1 class="header">Login or Sign Up</h1>

<div id="login-container">
    <h2>Log in</h2>
<form class="login-form">

    <input class="form-input" type="text" placeholder="username" id="username-login" />

    <input class="form-input" type="password" placeholder="password" id="password-login" />

    <button type="submit">Login</button>

</form>
</div>

<div class="signup-form">
    <h2>Sign Up</h2>
    <form id="signup-form">
        <div>
            <input type="text" placeholder="username" id="username-signup"/>
            <div>
                <input type="password" placeholder="password" id="password-signup">
            </div>
            <div>
                <button type="submit">Sign Up</button>
            </div>
        </div>
    </form>
</div>

<script src="/js/signup.js"></script>
<script src="/js/login.js"></script>
